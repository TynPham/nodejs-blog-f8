<div class="mt-4">
  <h1>My Courses</h1>
  <a href="/me/trash/courses" class="text-info">Trash</a>

  <table class="table mt-4">
    <thead>
      <tr>
        <th scope="col">#</th>
        <th scope="col">Name</th>
        <th scope="col">Slug</th>
        <th scope="col">Created At</th>
        <th scope="col"></th>
        <th scope="col"></th>
      </tr>
    </thead>
    <tbody>
      {{#each courses}}
        <tr>
          <th scope="row">{{sum @index 1}}</th>
          <td>{{this.name}}</td>
          <td>{{this.slug}}</td>
          <td>{{this.createdAt}}</td>
          <td>
            <a href="/courses/{{this._id}}/edit">Update</a>
          </td>
          <td>
            <a
              href="/courses/{{this._id}}/delete"
              data-bs-toggle="modal"
              data-bs-target="#exampleModal"
              data-bs-id="{{this._id}}"
            >Delete</a>
          </td>
        </tr>
      {{else}}
        <tr>
          <td colspan="5" class="text-center">
            You haven't posted a course yet.<a
              href="/courses/create"
              class="text-info"
            >Post a course</a>
          </td>
        </tr>

      {{/each}}
    </tbody>
  </table>
</div>

{{! form delete course }}
<form method="post" id="form-delete"></form>

{{! confirm delete course }}

<div
  class="modal fade"
  id="exampleModal"
  tabindex="-1"
  aria-labelledby="exampleModalLabel"
  aria-hidden="true"
>
  <div class="modal-dialog">
    <div class="modal-content">
      <div class="modal-header">
        <h1 class="modal-title fs-5" id="exampleModalLabel">Delete course</h1>
        <button
          type="button"
          class="btn-close"
          data-bs-dismiss="modal"
          aria-label="Close"
        ></button>
      </div>
      <div class="modal-body">
        Are you sure you want to delete this course?
      </div>
      <div class="modal-footer">
        <button
          type="button"
          class="btn btn-secondary"
          data-bs-dismiss="modal"
        >Cancel</button>
        <button
          type="button"
          class="btn btn-danger"
          id="btn-delete"
        >Delete</button>
      </div>
    </div>
  </div>
</div>

<script>
  const exampleModal = document.getElementById('exampleModal'); const btn_delete
  = document.getElementById('btn-delete'); const form_delete =
  document.forms['form-delete']; var courseId; /*when dialog confirm clicked*/
  exampleModal.addEventListener('show.bs.modal', event => { const button =
  event.relatedTarget; courseId = button.getAttribute('data-bs-id'); })/*when
  delete course btn clicked*/ btn_delete.onclick = () => { form_delete.action =
  '/courses/' + courseId + '?_method=delete'; form_delete.submit(); }
</script>